<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
  <title>LISiT</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>
<body>
<!--nav bar-->
<% include ../partials/nav_bar %>

<div class="container mt-3">
  <form method="POST">
    <div class="form-row">
      <div class="col">
        <div class="form-group">
          <label>Title</label>
          <input class="form-control" name="title" placeholder="Enter title" required>
          <small class="form-text text-muted">required</small>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <label>Original Title</label>
          <input class="form-control" name="originalTitle" placeholder="Enter original title">
        </div>
      </div>
    </div>
    <div class="form-group">
      <label>Synopsis</label>
      <textarea class="form-control" name="synopsis" rows="3" required></textarea>
      <small class="form-text text-muted">required</small>
    </div>
    <div class="form-row">
      <div class="col">
        <div class="form-group">
          <label>Duration</label>
          <input type="number" class="form-control" name="duration" placeholder="eg. 110">
          <small class="form-text text-muted">enter value in minutes</small>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <label>Status</label>
          <select class="form-control" name="status" required>
            <option>Announced</option>
            <option>Released</option>
            <option>Cancelled</option>
          </select>
          <small class="form-text text-muted">required</small>
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<% if (errors) { %>
  <% for (error in errors) { %>
    <% console.log(error); %>
    <li><%= error.msg %></li>
  <% } %>
<% } %>
<script></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
</body>
</html>